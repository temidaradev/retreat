# Receipt Store Backend Environment Configuration for Raspberry Pi 5
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database password (change this to a secure password)
DB_PASSWORD=secure_password_123

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Clerk authentication secret key
# Get this from your Clerk dashboard: https://dashboard.clerk.com/
CLERK_SECRET_KEY=your_clerk_secret_key_here

# JWT secret for internal token generation
# Generate a secure random string (32+ characters)
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@retreat.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File upload settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=text

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port (default: 8080)
PORT=8080

# Environment mode (release for production)
GIN_MODE=release
DEV_MODE=false

# =============================================================================
# RASPBERRY PI SPECIFIC SETTINGS
# =============================================================================
# These settings are optimized for Raspberry Pi 5
# Database connection pool settings (reduced for Pi's limited resources)
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=3
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=1m

# =============================================================================
# OPTIONAL: SSL/TLS CONFIGURATION
# =============================================================================
# If you want to enable HTTPS, uncomment and configure these
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# OPTIONAL: MONITORING CONFIGURATION
# =============================================================================
# Enable metrics collection (optional)
# METRICS_ENABLED=true
# METRICS_PORT=9090
