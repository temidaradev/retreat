# ============================================
# Receipt Store - Production Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=receiptlocker
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE
POSTGRES_PORT=5432

# Database Connection Pooling
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=1m
DB_SSLMODE=require

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD_HERE
REDIS_PORT=6379

# ============================================
# Server Configuration
# ============================================
BACKEND_PORT=8080
FRONTEND_PORT=3000
GIN_MODE=release
DEV_MODE=false

# Timeouts
READ_TIMEOUT=10s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s
SHUTDOWN_TIMEOUT=30s

# ============================================
# Authentication (Clerk)
# ============================================
# Get your Clerk keys from: https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_live_YOUR_CLERK_SECRET_KEY_HERE

# Clerk Frontend API domain (found in Clerk Dashboard -> API Keys)
# Example: heroic-dragon-8.clerk.accounts.dev
CLERK_FRONTEND_API=your-instance.clerk.accounts.dev

# Frontend Clerk Configuration
VITE_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_CLERK_PUBLISHABLE_KEY_HERE

# ============================================
# API Configuration
# ============================================
VITE_API_URL=https://api.retreat-app.tech

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# Security Configuration
# ============================================
# Rate limiting (requests per window)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File upload limits (in bytes)
MAX_FILE_SIZE=10485760

# Trusted proxies (comma-separated IPs)
TRUSTED_PROXIES=

# JWT Secret (generate a secure random string)
JWT_SECRET=YOUR_SECURE_JWT_SECRET_HERE

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@retreat-app.tech

# ============================================
# Production Deployment Notes
# ============================================
# 1. Generate secure passwords using: openssl rand -base64 32
# 2. Ensure all *_PASSWORD and *_SECRET variables are changed
# 3. Set DB_SSLMODE=require in production
# 4. Keep LOG_FORMAT=json for production log aggregation
# 5. Adjust RATE_LIMIT_* based on your expected traffic
# 6. Set TRUSTED_PROXIES if behind a reverse proxy/load balancer

